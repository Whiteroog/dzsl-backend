// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id Int @id @default(autoincrement())

  name String @unique
  slug String @unique

  price  Int
  images String[]

  description String

  specifications Specifications[]

  category   Category @relation(fields: [categoryId], references: [id])
  categoryId Int      @map("category_id")

  productItems ProductItem[]

  OrderProducts OrderProduct[]
}

model Specifications {
  id Int @id @default(autoincrement())

  name  String
  value Float

  product   Product @relation(fields: [productId], references: [id])
  productId Int     @map("product_id")
}

model ProductItem {
  id Int @id @default(autoincrement())

  name String @unique

  quantity Int
  price    Int

  product   Product @relation(fields: [productId], references: [id])
  productId Int     @map("product_id")

  orderProductItems OrderProductItem[]

  @@map("Product_item")
}

model Category {
  id Int @id @default(autoincrement())

  name String @unique
  slug String @unique

  products Product[]
}

model Order {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now()) @map("created_at")

  status EnumOrderStatus @default(NEW)

  total Int

  orderProducts OrderProduct[]
}

model OrderProduct {
  id Int @id @default(autoincrement())

  quantity Int
  price    Int

  order   Order @relation(fields: [orderId], references: [id])
  orderId Int   @map("order_id")

  product   Product @relation(fields: [productId], references: [id])
  productId Int     @map("product_id")

  orderProductItems OrderProductItem[]

  @@map("Order_product")
}

model OrderProductItem {
  id Int @id @default(autoincrement())

  quantity Int
  price    Int

  orderProduct   OrderProduct @relation(fields: [orderProductId], references: [id])
  orderProductId Int          @map("order_product_id")

  productItem   ProductItem @relation(fields: [productItemId], references: [id])
  productItemId Int         @map("product_item_id")

  @@map("Order_product_item")
}

enum EnumOrderStatus {
  NEW
  MADING
  WAITING
  DISPATCHED
  RECEIVED
  CANCELED
}
